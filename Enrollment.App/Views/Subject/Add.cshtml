@model SubjectVM

<h3>Create a New Subject</h3>

<form asp-controller="Subject" asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <label asp-for="Code"></label>
    <input type="text" asp-for="Code" class="form-control" />
    <span asp-validation-for="Code" class="text-danger"></span>
    <br />

    <label asp-for="Discription"></label>
    <input type="text" asp-for="Discription" class="form-control" />
    <span asp-validation-for="Discription" class="text-danger"></span>
    <br />

    <label asp-for="Units"></label>
    <input type="text" asp-for="Units" class="form-control" />
    <span asp-validation-for="Units" class="text-danger"></span>
    <br /><br />

    <a asp-controller="Subject" asp-action="index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" value="Add Subject" class="btn btn-success" />
</form>

